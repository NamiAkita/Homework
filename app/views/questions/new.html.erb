<h1>質問提出</h1>

<%= form_for @question do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<div class="task">
    <%= f.label :title %><br />
    <%= f.text_field :title, autocomplete: "title", class: "form-control col-12" %>
  </div>

  <div class="task">
    <%= f.label :content %><br />
    <%= f.text_area :content, autocomplete: "content", size: "20x10", class: "form-control col-12" %>
  </div>
  
  
  <div class="question submit">
     <%= f.submit "送信", class: "btn btn-info" %>
  </div>
<% end %>