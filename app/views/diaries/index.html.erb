<div id="mydiary">
  <h2 class="my-profile">プロフィール</h2>
  <div class="profile-area">
    <div class="profile-image">
      <% if @user.image.present? %>
        <%= image_tag @user.image, class: "user-image" %>
      <% else %>
        <%= image_tag "/images/noimage.png", class: "user-image" %>
      <% end %>
    </div>
    <div class="profile-content">
      <p class="name">名前：<%= @user.first_name %><%= @user.last_name %></p>
      <p class="name">名前（Viet)：<%= @user.first_name_viet %><%= @user.last_name_viet %></p>
      <p class="email"><i class="fas fa-envelope"></i>：<%= @user.email %></p>
      
      <% if @user.status == "a" %>
        <p class="status"><i class="far fa-user"></i>：在学生</p>
      <% elsif @user.status == "g" %>
        <p class="status"><i class="far fa-user"></i>：卒業生</p>
      <% else %>
       <p></p>
      <% end %>
    </div>
  </div>
  
  <!--<div class="post-light">-->
  <!--  < link_to "編集", edit_user_registration_path, class: "btn btn-outline-primary" %>-->
  <!--</div>-->
  
  
  <hr>
  
  
  <h2 class="my-diaries">日記</h2>

  <%= paginate @diaries %>

<div class="diary-container">
<% @diaries.each do |diary| %>
 <div class="media">
    <div class="media-images">
      <% if diary.images.present? %>
        <%= image_tag diary.images[0], class: "mr-3 diaries_image" %>
      <% else %>
        <%= image_tag "/images/noimage.png", class: "mr-3 diaries_image" %>
      <% end %>
    </div>
    <div class="media-body">
      <h5><%= link_to diary.title, "/users/#{diary.user_id}/diaries/#{diary.id}", class: "mt-0" %></h5>
      <%= diary.content.truncate(14) %>
    </div>
  </div>

<% end %>
</div>
  <div class="pagination-footer">
    <%= paginate @diaries %>
  </div>

</div>

