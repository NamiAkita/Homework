<div class="image">
<% if @user.image.present? %>
    <%= image_tag @user.image, class: "user-image" %>
<% else %>
    <%= image_tag "/images/noimage.png", class: "user-image" %>
<% end %>
</div>

<div class="diaries">
<h3 class="name"><%= @user.last_name %>'s Diaries</h3>
</div>



<%= @diaries.each do |diary| %>
    <div class="media">
        <div class="media-images">
          <% if diary.images.present? %>
            <%= image_tag diary.images[0], class: "mr-3 diaries_image" %>
          <% else %>
            <%= image_tag "/images/noimage.png", class: "mr-3 diaries_image" %>
          <% end %>
        </div>
        <div class="media-body">
          <h5><%= link_to diary.title, "/users/#{diary.user_id}/diaries/#{diary.id}", class: "mt-0" %></h5>
          <%= diary.content %>
        </div>
    </div>
<% end %>


<style>
    .image {
        margin-bottom: 20px;
        margin-left: 40px;
    }
    
    .name {
        margin-left: 20px;
        margin-bottom: 30px;
    }
    .diaries {
        border-bottom: 1px solid gray;
    }
    
    .user-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 2px solid gray;
    }
    
    .diaries_image {
        width: 200px;
        height:200px;
    }

    .media {
        padding: 10px;
        border-bottom: 1px solid gray;
    }
    @media screen and (max-width:500px) {
        .container {
            text-align: center;
        }
    }
</style>