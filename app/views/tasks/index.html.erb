<div class="task-index">
<h1>Task一覧</h1>
  <div class="post-light">
  <% if current_user.user_type == "t" %>
    <%= link_to "Add Task", new_task_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">出題日</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
        <tr>
          <th scope="row">1</th>
          <td><%= link_to task.title, task_path(task) %></td>
          <td><%= task.content.truncate(8) %></td>
          <td><%= task.created_at.strftime("%Y/%-m/%-d") %></td>
        </tr>
    <% end %>
  </tbody>
</table>    

    
    
</div>

<style>
.post-light {
  float: right;
}
</style>