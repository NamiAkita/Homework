<div id="task-index">
<h1>課題一覧</h1>
  <div class="post-light">
  <% if current_user.user_type == "t" %>
    <%= link_to "Add Task", new_task_path, class: "btn btn-outline-primary" %>
  <% end %>
  </div>
  
<%= paginate @tasks %>

<div id="table-tasks">
  <table class="table table-hover">
    <thead>
      <tr bgcolor="#acbdc7">
        <th class="th-1">No.</th>
        <th class="th-2">Title</th>
        <th class="th-3">Content</th>
        <th class="th-4">Date</th>
      </tr>
    </thead>
    
    <tbody>
      <% @tasks.each do |task| %>
         <div class="table-task">
            <tr>
              <th scope="row"><%= task.id %></th>
              <td><%= link_to task.title.truncate(12), task_path(task) %></td>
              <td class="th-3"><%= task.content.truncate(8) %></td>
              <td><%= task.created_at.strftime("%Y/%-m/%-d") %></td>
            </tr>
        </div>
      <% end %>
    </tbody>
    
  </table>    
</div>
    <%= paginate @tasks %>
    
</div>


